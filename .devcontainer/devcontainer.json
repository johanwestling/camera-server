{
	"build": {
    "context": "../", 
		"dockerfile": "Dockerfile"
	},
  "containerEnv": {
    "SHELL": "/bin/bash",
    "DEVCONTAINER_WORKSPACE": "${localWorkspaceFolder}"
  },
  "postCreateCommand": "./.devcontainer/lifecycle/postCreateCommand.sh",
  "postStartCommand": "./.devcontainer/lifecycle/postStartCommand.sh",
  "postAttachCommand": "./.devcontainer/lifecycle/postAttachCommand.sh",
  "workspaceMount": "source=${localWorkspaceFolder},target=${localWorkspaceFolder},type=bind,consistency=cached", 
  "workspaceFolder": "${localWorkspaceFolder}",
	"mounts": [
    {
      // Host docker socket.
      "source": "/var/run/docker.sock",
      "target": "/var/run/docker.sock",
      "type": "bind"
    },
    {
      // Host ssh config.
      "source": "${env:HOME}/.ssh",
      "target": "/root/.host/.ssh",
      "type": "bind"
    },
    {
      // Host git config.
      "source": "${env:HOME}/.gitconfig",
      "target": "/root/.host/.gitconfig",
      "type": "bind"
    },
    {
      // Devcontainer starship config.
      "source": "${localWorkspaceFolder}/.devcontainer/config/starship/starship.toml",
      "target": "/root/.config/starship.toml",
      "type": "bind"
    }
	],
  "forwardPorts": [
		// Define ports to be forwarded to host.
	],
  "customizations": {
    // Define vscode extensions and settings.
    "vscode": {
      "extensions": [
        "ms-vscode-remote.remote-containers"
      ]
    }
  }
}